<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ordersheet_10dp"
        android:layout_marginRight="@dimen/ordersheet_10dp"
        android:background="@mipmap/voucher_green"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/coupon_item_bg"
            android:padding="@dimen/margin_10dp">

            <TextView
                android:id="@id/coupon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:ems="1"
                android:textColor="@color/white"
                android:textSize="@dimen/rechare_text_size"
                tools:text="代金券" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/coupon_name"
                android:orientation="vertical">

                <TextView
                    android:id="@id/coupon_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/rechare_text_size"
                    tools:text="20元" />

                <TextView
                    android:id="@id/coupon_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/member_tabl_text_size"
                    tools:text="满100元可用" />

                <TextView
                    android:id="@id/coupon_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/member_tabl_text_size"
                    tools:text="2018.11.30-2018.12.30" />

            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>

    <CheckBox
        android:id="@id/check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:visibility="gone"
        android:button="@drawable/check_box_drawable" />
</FrameLayout>