<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/sale_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/ordersheet_10dp"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ordersheet_10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@id/bill_code_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单号：20181112004"
            android:textColor="@color/ordersheet_table_des_color"
            android:textSize="@dimen/ordersheet_14sp" />

        <TextView
            android:id="@id/guest_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ordersheet_10dp"
            android:layout_weight="1"
            android:text="客户手机号：18180753688"
            android:textColor="@color/ordersheet_table_des_color"
            android:textSize="@dimen/ordersheet_14sp" />

        <TextView
            android:id="@id/guest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ordersheet_10dp"
            android:layout_weight="1"
            android:text="客户姓名：王德发"
            android:textColor="@color/ordersheet_table_des_color"
            android:textSize="@dimen/ordersheet_14sp" />

        <TextView
            android:id="@id/guest_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ordersheet_10dp"
            android:layout_weight="1"
            android:text="客户人数：8人"
            android:textColor="@color/ordersheet_table_des_color"
            android:textSize="@dimen/ordersheet_14sp" />

        <TextView
            android:id="@id/table_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ordersheet_10dp"
            android:layout_weight="1"
            android:text="开台时间：2018-11-12 23:00"
            android:textColor="@color/ordersheet_table_des_color"
            android:textSize="@dimen/ordersheet_14sp" />

        <TextView
            android:id="@id/leave_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ordersheet_10dp"
            android:layout_weight="1"
            android:text="离店时间：2018-11-13 04:00"
            android:textColor="@color/ordersheet_table_des_color"
            android:textSize="@dimen/ordersheet_14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ordersheet_10dp"
        android:text="储值奖励"
        android:textColor="@color/menber_main_tab_title_color"
        android:textSize="@dimen/ordersheet_18sp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@id/jl_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:background="@drawable/web_chart_bg"
        android:padding="@dimen/ordersheet_1dp"
        android:layout_marginTop="@dimen/ordersheet_10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付方式"
        android:layout_marginTop="@dimen/ordersheet_10dp"
        android:textColor="@color/menber_main_tab_title_color"
        android:textSize="@dimen/ordersheet_18sp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@id/pay_web"
        android:layout_marginTop="@dimen/ordersheet_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:background="@drawable/web_chart_bg"
        android:padding="@dimen/ordersheet_1dp" />

</LinearLayout>