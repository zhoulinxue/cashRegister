<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/payment_root_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ordersheet_80dp"
    android:layout_margin="@dimen/ordersheet_10dp"
    android:background="@drawable/member_search_edit_bg"
    android:paddingLeft="@dimen/ordersheet_5dp"
    android:paddingTop="@dimen/ordersheet_10dp">

    <ImageView
        android:id="@id/payment_type_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/ordersheet_10dp"
        android:src="@mipmap/icon_pay_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/ordersheet_10dp"
        android:layout_toRightOf="@id/payment_type_head"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@id/payment_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ordersheet_10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="@color/ordersheet_table_des_color"
            android:textSize="@dimen/ordersheet_14sp"
            tools:text=" 微信支付面\n对面扫码" />
    </LinearLayout>
    <TextView
        android:id="@id/member_msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/ordersheet_10dp"
        android:layout_marginTop="@dimen/ordersheet_20dp"
        android:layout_marginRight="@dimen/ordersheet_10dp"
        android:layout_marginBottom="@dimen/ordersheet_5dp"
        android:text="186***7809"
        android:textColor="@color/ordersheet_table_des_color"
        android:textSize="@dimen/ordersheet_14sp" />
</RelativeLayout>