<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@id/ordersheet_bill_content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/ordersheet_table_item_bg"
        android:padding="@dimen/ordersheet_20dp">

        <android.support.v7.widget.RecyclerView
            android:id="@id/ordersheet_bill_listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ImageView
        android:id="@id/ordersheet_bill_close_img"
        android:layout_width="@dimen/ordersheet_18dp"
        android:layout_height="@dimen/ordersheet_18dp"
        android:layout_alignTop="@id/ordersheet_bill_content_layout"
        android:layout_alignRight="@id/ordersheet_bill_content_layout"
        android:layout_marginTop="@dimen/ordersheet_5dp"
        android:layout_marginRight="@dimen/ordersheet_5dp"
        android:src="@mipmap/ordersheet_close_dialog" />
</RelativeLayout>