<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ordersheet_10dp"
        android:paddingLeft="@dimen/ordersheet_10dp"
        android:paddingRight="@dimen/ordersheet_10dp">

        <TextView
            android:id="@id/pay_list_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="全部账单"
            android:textColor="@color/ordersheet_table_des_color"
            android:textSize="@dimen/ordersheet_12sp" />

        <TextView
            android:id="@id/pay_list_item_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="11-19  23:30"
            android:textColor="@color/ordersheet_table_des_color"
            android:textSize="@dimen/ordersheet_12sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/ordersheet_10dp"
        android:orientation="vertical">

        <TextView
            android:id="@id/pay_list_item_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/ordersheet_10dp"
            android:paddingRight="@dimen/ordersheet_10dp"
            android:text="11-19  23:30"
            android:textColor="@color/ordersheet_remark_color"
            android:textSize="@dimen/ordersheet_12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/ordersheet_10dp"
            android:background="@color/ordersheet_remark_divider" />
    </LinearLayout>
</LinearLayout>