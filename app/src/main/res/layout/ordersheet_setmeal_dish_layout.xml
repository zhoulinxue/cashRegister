<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/ordersheet_170dp"
    android:layout_height="@dimen/ordersheet_120dp"
    android:layout_marginLeft="@dimen/ordersheet_10dp"
    android:layout_marginBottom="@dimen/ordersheet_10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ordersheet_8dp"
        android:background="@drawable/ordersheet_dishes_item_bg"
        android:orientation="vertical"
        android:padding="@dimen/ordersheet_10dp">

        <TextView
            android:id="@id/ordersheet_dishes_child_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="劲爆鸡米花米花劲爆鸡米花米花"
            android:textColor="@color/ordersheet_table_name_color"
            android:textSize="@dimen/ordersheet_18sp" />
    </LinearLayout>


    <TextView
        android:id="@id/ordersheet_dishes_child_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/ordersheet_dishes_num_tv_bg"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/ordersheet_white"
        android:textSize="@dimen/ordersheet_10sp" />
</RelativeLayout>