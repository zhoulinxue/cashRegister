<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ordersheet_60dp"
    android:layout_gravity="top|center_horizontal"
    android:layout_marginTop="@dimen/ordersheet_10dp"
    android:orientation="vertical">

    <TextView
        android:id="@id/ordersheet_dishes_type_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/ordersheet_10dp"
        android:background="@drawable/ordersheet_table_area_item_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="@dimen/ordersheet_20dp"
        android:paddingTop="@dimen/ordersheet_8dp"
        android:paddingRight="@dimen/ordersheet_30dp"
        android:paddingBottom="@dimen/ordersheet_8dp"
        android:textColor="@color/ordersheet_area_color"
        android:textSize="@dimen/ordersheet_14sp"
        tools:text="大份" />
    <TextView
        android:id="@id/ordersheet_dishes_time_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ordersheet_5dp"
        android:layout_marginRight="@dimen/ordersheet_22dp"
        android:background="@drawable/ordersheet_dishes_time_bg"
        android:paddingLeft="@dimen/ordersheet_4dp"
        android:paddingRight="@dimen/ordersheet_4dp"
        android:text="时段价"
        android:textColor="@color/ordersheet_white"
        android:textSize="@dimen/ordersheet_8sp" />
</RelativeLayout>